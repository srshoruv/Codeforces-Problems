{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build C++",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++11",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
